<UserControl x:Class="zdvokzal.Elements.rab_itm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:zdvokzal.Elements"
                     mc:Ignorable="d">
    <Border x:Name="border" Opacity="1" Margin="0,5,0,0" CornerRadius="5,5,5,5" Background="Gray" BorderBrush="Purple" BorderThickness="2">
        <Grid Width="691">
            <Grid.Resources>
                <ResourceDictionary Source="/Resource/BtnRes.xaml"/>
            </Grid.Resources>
            <Label Content="Фамилия" FontWeight="Bold" Foreground="Purple" x:Name="fam" Margin="10,10,80,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Height="40" VerticalAlignment="Top" FontSize="20"/>
            <Label Content="Год рождения" FontWeight="Bold" x:Name="god" Margin="10,50,80,0" Foreground="Purple" HorizontalContentAlignment="Left" Height="40" VerticalAlignment="Top" FontSize="20"/>
            <Label Content="Пол" x:Name="pol" FontWeight="Bold" Margin="10,90,80,0" Foreground="Purple" HorizontalContentAlignment="Left" Height="40" VerticalAlignment="Top" FontSize="20"/>
            <Label Content="Должность" x:Name="dolzh" FontWeight="Bold" Margin="10,130,80,0" Foreground="Purple" HorizontalContentAlignment="Left" Height="40" VerticalAlignment="Top" FontSize="20"/>
            <Label Content="Год поступления" FontWeight="Bold" x:Name="god_post" Margin="10,170,80,0" Foreground="Purple" HorizontalContentAlignment="Left" Height="40" VerticalAlignment="Top" FontSize="20"/>
            <Label Content="Стаж" x:Name="stazh" FontWeight="Bold" Margin="10,210,80,0" Foreground="Purple" HorizontalContentAlignment="Left" Height="40" VerticalAlignment="Top" FontSize="20"/>
            <Label Content="Адрес" x:Name="adres" FontWeight="Bold" Margin="10,250,80,0" Foreground="Purple" HorizontalContentAlignment="Left" Height="40" VerticalAlignment="Top" FontSize="20"/>
            <Label Content="Город" x:Name="gorod" FontWeight="Bold" Margin="10,290,80,0" Foreground="Purple" HorizontalContentAlignment="Left" Height="40" VerticalAlignment="Top" FontSize="20"/>
            <Label Content="Телефон" x:Name="tel" FontWeight="Bold" Margin="10,330,80,10" Foreground="Purple" HorizontalContentAlignment="Left" Height="40" VerticalAlignment="Top" FontSize="20"/>

            <Grid x:Name="buttons" Visibility="Visible">
                <Button Style="{StaticResource BtnRedac}" Background="#FF2C2C2C" Margin="0,0,10,50" VerticalAlignment="Center" Height="40" Width="63" Click="Click_PItm_redact" HorizontalAlignment="Right">
                    <Image Source="/Image/redac.png" Width="20" Height="20"/>
                </Button>
                <Button Style="{StaticResource BtnRedac}" Background="Purple" Margin="0,0,10,-50" VerticalAlignment="Center" Height="40" Width="63" Click="Click_PItm_remove" HorizontalAlignment="Right">
                    <Image Source="/Image/del.png" Width="20" Height="20"/>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>
