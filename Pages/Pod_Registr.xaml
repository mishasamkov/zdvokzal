<Page x:Class="zdvokzal.Pages.Pod_Registr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zdvokzal.Pages"
      mc:Ignorable="d" 
         mc:Ignorable="d"
    Title="" Height="350" Width="400">

    <Grid Background="Gray">
        <Grid.Resources>
            <ResourceDictionary Source="/Resource/BtnRes.xaml"/>
        </Grid.Resources>
        <Label Content="Регистрация" FontWeight="Bold" FontSize="25" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0" Foreground="Purple">
            <Label.Effect>
                <DropShadowEffect BlurRadius="31" Direction="260" Color="#FFC1C1C1" ShadowDepth="0"/>
            </Label.Effect>
        </Label>
        <Label Content="Логин" FontWeight="Bold" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Foreground="Purple" Width="46" Margin="95,75,0,0"/>
        <TextBox x:Name="login" Style="{StaticResource BaseBox}" FontSize="25" VerticalContentAlignment="Center"  FontFamily="Note Color Emoji" HorizontalContentAlignment="Center" Height="50" Background="Purple" Foreground="White" Width="200" VerticalAlignment="Top" Margin="0,100,0,0" HorizontalAlignment="Center"/>
        <Label Content="Пароль" FontWeight="Bold" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Purple" Width="50" Margin="95,161,0,0"/>
        <PasswordBox x:Name="password" Style="{StaticResource BaseBox}" VerticalContentAlignment="Center" FontSize="25" HorizontalContentAlignment="Center" Height="50" Background="Purple" Width="200" Foreground="White" VerticalAlignment="Top" Margin="0,185,0,0" HorizontalAlignment="Center"/>
        <Border Name="vhod" Height="50" Width="200" CornerRadius="5" MouseDown="Click_Vhod" Background="Purple" Style="{StaticResource Grid Itm_Anim}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,250,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="31" Direction="260" Color="#FFC1C1C1" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Label Content="Войти" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="25"/>
            </Grid>
        </Border>
    </Grid>
</Page>
